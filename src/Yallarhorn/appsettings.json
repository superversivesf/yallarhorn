{
  "Version": "1.0",
  "PollInterval": 3600,
  "MaxConcurrentDownloads": 3,
  "DownloadDir": "./downloads",
  "TempDir": "./temp",

  "Server": {
    "Host": "0.0.0.0",
    "Port": 5001,
    "BaseUrl": "http://localhost:5001",
    "FeedPath": "/feeds",
    "UseHttps": false,
    "MaxConcurrentConnections": 100,
    "RequestTimeoutSeconds": 30
  },

  "Database": {
    "Path": "./data/yallarhorn.db",
    "PoolSize": 5
  },

  "TranscodeSettings": {
    "AudioFormat": "mp3",
    "AudioBitrate": "192k",
    "AudioSampleRate": 44100,
    "VideoFormat": "mp4",
    "VideoCodec": "h264",
    "VideoQuality": 23,
    "Threads": 4,
    "KeepOriginal": false
  },

  "Auth": {
    "FeedCredentials": {
      "Enabled": false,
      "Realm": "Yallarhorn Feeds"
    },
    "AdminAuth": {
      "Enabled": false
    }
  },

  "Workers": {
    "Enabled": true,
    "RefreshIntervalSeconds": 3600,
    "DownloadPollIntervalSeconds": 5
  },

  "Channels": [],

  "LoggingOptions": {
    "MinimumLevel": "Information",
    "EnableConsole": true,
    "EnableFile": true,
    "FilePath": "logs/yallarhorn-.log",
    "RollingInterval": "Day",
    "RetainedFileCount": 31,
    "ConsoleOutputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}",
    "FileOutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}