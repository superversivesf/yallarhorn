# Yallarhorn Podcast Server Configuration
# 
# IMPORTANT: Copy this file to yallarhorn.yaml and add YOUR channels below
# The Docker container will only see channels you configure here
#
# feedType options: "audio", "video", "both"

version: "1.0"

# Polling interval in seconds (minimum 300 = 5 minutes)
pollInterval: 3600

# Maximum concurrent downloads
maxConcurrentDownloads: 3

# Directories for downloaded content (inside container)
downloadDir: "./downloads"
tempDir: "./temp"

# Server configuration
server:
  host: "0.0.0.0"
  port: 5001
  baseUrl: "http://your-server-hostname:5001"  # CHANGE THIS to your server URL
  feedPath: "/feeds"
  useHttps: false
  maxConcurrentConnections: 100
  requestTimeoutSeconds: 30

# Database configuration (SQLite)
database:
  path: "./data/yallarhorn.db"
  poolSize: 5

# Transcode settings for media processing
transcodeSettings:
  audioFormat: "mp3"
  audioBitrate: "192k"
  audioSampleRate: 44100
  videoFormat: "mp4"
  videoCodec: "h264"
  videoQuality: 23
  threads: 4
  keepOriginal: false

# Authentication (disabled by default)
auth:
  feedCredentials:
    enabled: false
    realm: "Yallarhorn Feeds"
  adminAuth:
    enabled: false

# ==============================================================================
# CHANNELS - ADD YOUR YOUTUBE CHANNELS HERE
# ==============================================================================
# At least one channel is required. The application will download videos from
# these channels and create podcast feeds.
#
# Example:
# channels:
#   - name: "AI News & Strategy"
#     url: "https://www.youtube.com/@NateBJones"
#     episodeCount: 10
#     enabled: true
#     feedType: "audio"
#   - name: "AI Species"
#     url: "https://www.youtube.com/@AISpecies"
#     episodeCount: 15
#     enabled: true
#     feedType: "both"
# ==============================================================================
channels: []